<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screen.main.friend.FriendFragment">

    <include
            android:id="@+id/custom_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/custom_search_box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/dp_5"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_layout_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/custom_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/text_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/friend_requests"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_request"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                app:layout_constraintTop_toBottomOf="@id/text_request"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/dp_5"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:id="@+id/text_your_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_friends"
            app:layout_constraintTop_toBottomOf="@id/constraint_layout_request"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"/>

    <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/text_your_friend"
            android:layout_marginTop="@dimen/dp_5"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_friends"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/dp_5"/>
</android.support.constraint.ConstraintLayout>
